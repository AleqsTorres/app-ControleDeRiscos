<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundotelaprincipal1projint3"
    android:padding="16dp">

    <!-- Botão Adicionar Localização (topo) -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="204dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="68dp"
                android:text="Adicionar Localização"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="378dp"
                android:layout_height="442dp"
                android:contentDescription="@string/imagem_selecionada"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/adcimgButton"
                android:layout_width="204dp"
                android:layout_height="48dp"
                android:text="Adicionar Imagem"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="Autofill,TextContrastCheck" />

            <EditText
                android:id="@+id/nome_completo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome Completo"
                android:inputType="text"
                android:textColorHint="@color/white"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <EditText
                android:id="@+id/setor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Setor"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="@color/white"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/button"
                android:layout_width="107dp"
                android:layout_height="48dp"
                android:text="Enviar"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:text="Voltar"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
